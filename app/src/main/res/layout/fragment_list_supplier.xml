<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonTambahSupplier"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="12dp"
        android:layout_gravity="center"
        android:text="Tambah Supplier"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:text="Nama Supplier"
            android:id="@+id/header_supplier_1"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:text="Alamat"
            android:id="@+id/text_supplier_2"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:text="Kontak"
            android:id="@+id/text_supplier_3"
            android:layout_height="30dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listViewSupplier"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
</LinearLayout>