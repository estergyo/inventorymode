<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/imageButtonTambahItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:src="@drawable/camera"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="#00000000"
        />
    <!--<Button-->
        <!--android:id="@+id/buttonKameraTI"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="tambah gambar"/>-->
    <EditText
        android:id="@+id/editTextNamaProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:hint="Nama Produk"
        android:singleLine="true"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/editTextSKU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:inputType="number"
        android:hint="SKU"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/editTextJumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:inputType="number"
        android:hint="Jumlah"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/editTextHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:inputType="number"
        android:hint="Harga"
        android:textSize="14sp"/>
    <Spinner
        android:id="@+id/spinnerSupplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <Spinner
        android:id="@+id/spinnerKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/simpanItem"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center|bottom"
        android:text="simpan"
        android:background="@drawable/button"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:textColor="#FFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:showDividers="middle"
        android:divider="@drawable/divider">
        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:id="@+id/buttonTambahKategoriTI"
            android:text="tambah kategori"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:id="@+id/buttonTambahSupplierTI"
            android:text="tambah pemasok"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>