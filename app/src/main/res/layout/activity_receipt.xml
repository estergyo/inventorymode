<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tanggal"
        android:layout_margin="10dp"
        android:id="@+id/textViewTanggalRcp"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:text="No"
            android:layout_height="30dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:text="Nama"
            android:layout_height="30dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:text="Jumlah"
            android:layout_height="30dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:text="Harga"
            android:layout_height="30dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listViewItemReceipt"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayar"
            android:id="@+id/textviewBayar"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/textViewBayarRcp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembalian"
            android:id="@+id/textViewKembalian"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:id="@+id/textViewKembalianRcp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:id="@+id/buttonKirim"
            android:layout_gravity="center|top"
            android:text="kirim struk"
            android:background="@drawable/button"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:id="@+id/buttonSelesai"
            android:layout_gravity="center|top"
            android:text="selesai"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>