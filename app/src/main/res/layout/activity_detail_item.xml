<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewNamaDI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_margin="12dp"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/imageItemDI"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:scaleType="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="SKU"
            android:id="@+id/textViewSKUItem"
            android:layout_margin="6dp" />
        <TextView
            android:id="@+id/textSkuDI"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:inputType="number"
            android:hint="SKU"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:id="@+id/textViewJumlahItem"
            android:layout_margin="6dp" />
        <TextView
            android:id="@+id/textJumlahDI"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:inputType="number"
            android:hint="Jumlah"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:id="@+id/textViewHargaItem"
            android:layout_margin="6dp" />
        <TextView
            android:id="@+id/textHargaDI"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:hint="Harga"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:id="@+id/textViewKategoriItem"
            android:layout_margin="6dp" />
        <TextView
            android:id="@+id/textKategoriDI"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:hint="Kategori"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Supplier"
            android:id="@+id/textViewSupplierItem"
            android:layout_margin="6dp" />
        <TextView
            android:id="@+id/textSupplierDI"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:hint="Supplier"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/buttonEditDI"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/button"
            android:text="edit"
            android:layout_weight="0.5" />
        <Button
            android:id="@+id/buttonDeleteDI"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/button"
            android:text="Delete"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>