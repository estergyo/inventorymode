<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewNamaDI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_margin="12dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/imageItemDI"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:scaleType="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider_green"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKU"
                    android:id="@+id/textViewSKUItem"
                    android:layout_margin="6dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textSkuDI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:inputType="number"
                    android:hint="SKU"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:id="@+id/textViewKategoriItem"
                    android:layout_margin="6dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textKategoriDI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:hint="Kategori"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier"
                    android:id="@+id/textViewSupplierItem"
                    android:layout_margin="6dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textSupplierDI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:hint="Supplier"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:divider="@drawable/divider_green"
                android:showDividers="middle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:divider="@drawable/divider_green"
                    android:showDividers="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah"
                        android:id="@+id/textViewJumlahItem"
                        android:layout_margin="6dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textJumlahDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:inputType="number"
                        android:hint="Jumlah"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:divider="@drawable/divider_green"
                    android:showDividers="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:id="@+id/textViewHargaItem"
                        android:layout_margin="6dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textHargaDI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:hint="Harga"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="15dp"
            android:divider="@drawable/divider"
            android:showDividers="middle">
            <Button
                android:id="@+id/buttonEditDI"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/button"
                android:text="edit"
                android:layout_weight="0.5"
                android:textColor="#ffffff" />
            <Button
                android:id="@+id/buttonDeleteDI"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/button"
                android:text="Delete"
                android:layout_weight="0.5"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="15dp"
            android:divider="@drawable/divider"
            android:showDividers="middle">
            <Button
                android:id="@+id/buttonTwitterDI"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/button"
                android:text="tweet"
                android:layout_weight="0.5"
                android:textColor="#ffffff" />
            <Button
                android:id="@+id/buttonFacebookDI"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/button"
                android:text="post on wall"
                android:layout_weight="0.5"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>