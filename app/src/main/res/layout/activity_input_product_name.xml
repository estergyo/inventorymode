<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.barcodescanner.InputProductName"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Data Produk"
        android:id="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="35dp"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:scaleType="center"
        android:background="@drawable/camera"
        android:id="@+id/imageButtonKameraIPN"
        />
    <!--<Button-->
        <!--android:id="@+id/buttonKameraIPN"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="tambah gambar"-->
        <!--android:background="@drawable/button"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="nama produk"
            android:id="@+id/textViewNamaProduk"
            android:layout_weight="0.3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNamaProdukBaru"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="harga produk"
            android:id="@+id/textViewHargaProduk"
            android:layout_weight="0.3"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextHargaProdukBaru"
            android:inputType="number"
            android:layout_weight="0.7" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerSupplierIPN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <Spinner
        android:id="@+id/spinnerKategoriIPN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Simpan"
        android:id="@+id/buttonSimpanScan"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"/>
</LinearLayout>
